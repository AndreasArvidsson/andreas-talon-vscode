{
    "scopeName": "source.snippet",
    "patterns": [
        {
            "include": "#context"
        },
        {
            "include": "#body"
        }
    ],
    "repository": {
        "context": {
            "begin": "(?=^\\$?[\\w.]+\\s*:)|(?<=^---$)",
            "end": "(?=^-$)",
            "patterns": [
                {
                    "include": "#pair-scalar"
                },
                {
                    "include": "#pair-vector"
                },
                {
                    "include": "#pair-variable"
                }
            ]
        },
        "body": {
            "begin": "(?<=^-$)",
            "end": "(?=^---$)",
            "name": "string.unquoted.snippet",
            "patterns": [
                {
                    "include": "#variable"
                }
            ]
        },
        "pair-scalar": {
            "match": "^(name): ?(\\w+)$",
            "captures": {
                "1": {
                    "patterns": [
                        {
                            "include": "#key"
                        }
                    ]
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#value"
                        }
                    ]
                }
            }
        },
        "pair-vector": {
            "match": "^(phrase|language): ?([\\w| ]+)$",
            "captures": {
                "1": {
                    "patterns": [
                        {
                            "include": "#key"
                        }
                    ]
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#value"
                        }
                    ]
                }
            }
        },
        "pair-variable": {
            "match": "^(\\$\\w+)\\.(wrapperPhrase|wrapperScope): ?([\\w ]+)$",
            "captures": {
                "1": {
                    "patterns": [
                        {
                            "include": "#variable"
                        }
                    ]
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#key"
                        }
                    ]
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#value"
                        }
                    ]
                }
            }
        },
        "variable": {
            "match": "\\$\\w+",
            "name": "variable.other.snippet"
        },
        "key": {
            "match": "\\w+",
            "name": "entity.name.tag.snippet"
        },
        "value": {
            "match": "\\w+",
            "name": "entity.name.function.snippet"
        }
    }
}
