{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "outDir": "out",
        "esModuleInterop": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true
    },
    "include": ["src"]
}
