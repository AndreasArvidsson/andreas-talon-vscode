{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "dependsOn": ["TSBuild", "Bundle assets"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "TSBuild",
            "type": "npm",
            "script": "build",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },

        {
            "label": "Bundle assets",
            "type": "npm",
            "script": "bundle-assets",
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },

        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        }
    ]
}
